<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_achievement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.yunalescca.swedishpronunciations.controllers.AchievementActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/asna_achievement"
        android:id="@+id/achievement_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/achievement_image"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:textSize="24sp"
        android:id="@+id/achievement_name" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/achievement_image"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:id="@+id/achievement_description"
        android:textSize="18sp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/achievement_point"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/achievement_name"
        android:textSize="24sp"
        android:layout_alignStart="@+id/achievement_name" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/achievement_status"
        android:layout_below="@+id/achievement_point"
        android:layout_alignStart="@+id/achievement_point"
        android:textSize="24sp"
        android:layout_marginTop="20dp" />
</RelativeLayout>
